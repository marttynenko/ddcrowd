{% extends "../parts/layout.twig" %}

{% block content %}
    {% embed "../parts/banner.twig" %}{% endembed %}

    <div class="container">
        <div class="heading">
            <h1 class="heading__title">Программы обучения</h1>

            <div class="heading__side">
                <div class="dropdown js-dropdown hide-md">
                    <div class="dropdown__title js-dropdown-toggler">Все направления</div>
                    <div class="dropdown__list js-dropdown-content">
                        <div class="dropdown__item js-dropdown-item">Опция 1</div>
                        <div class="dropdown__item js-dropdown-item">Опция 2</div>
                    </div>
                </div>

                <div class="dropdown js-dropdown">
                    <div class="dropdown__title js-dropdown-toggler">Любая сложность</div>
                    <div class="dropdown__list js-dropdown-content">
                        <div class="dropdown__item js-dropdown-item">Опция 1</div>
                        <div class="dropdown__item js-dropdown-item">Опция 2</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="cards">
            <div class="card" style="background: #EDEBF7">
                <div class="card__content">
                    <h2 class="card__title"><a href="#">Madlab: кратно ускорь стартап за 7 недель</a></h2>
                    <p class="card__desc">Старт бизнеса, базовый уровень</p>
                    <div class="card__amount">7 недель</div>
                </div>
                <img class="card__cover" src="img/cards/1.png" srcset="img/cards/1@2x.png 2x" alt="">
                <div class="card__more">
                    <a href="#">Подробнее</a>
                </div>
            </div>

            <div class="card" style="background: #E9F1F5">
                <div class="card__content">
                    <h2 class="card__title"><a href="#">Акселератор образовательных проектов</a></h2>
                    <p class="card__desc">Масштабирование, базовый уровень</p>
                    <div class="card__amount">5 недель</div>
                </div>
                <img class="card__cover" src="img/cards/2.png" srcset="img/cards/2@2x.png 2x" alt="">
                <div class="card__more">
                    <a href="#">Подробнее</a>
                </div>
            </div>

            <div class="card" style="background: #E8F0E4">
                <div class="card__content">
                    <h2 class="card__title"><a href="#">Акселератор Digital-проектов</a></h2>
                    <p class="card__desc">Масштабирование, продвинутый уровень</p>
                    <div class="card__amount">10 недель</div>
                </div>
                <img class="card__cover" src="img/cards/3.png" srcset="img/cards/3@2x.png 2x" alt="">
                <div class="card__more">
                    <a href="#">Подробнее</a>
                </div>
            </div>

            <div class="card" style="background: #F7EBF3">
                <div class="card__content">
                    <h2 class="card__title"><a href="#">Digital Dolina: легендарный базовый курс</a></h2>
                    <p class="card__desc">Построение бизнеса, базовый уровень</p>
                    <div class="card__progress">
                        <div class="progress">
                            <div class="progress__value">10%</div>
                            <div class="progress__line">
                                <div class="progress__done" style="width: 10%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="card__cover" src="img/cards/4.png" srcset="img/cards/4@2x.png 2x" alt="">
                <div class="card__more">
                    <a href="#">Подробнее</a>
                </div>
            </div>

            <div class="card" style="background: #F7EBEB">
                <div class="card__content">
                    <h2 class="card__title"><a href="#">Марафон по достижению целей</a></h2>
                    <p class="card__desc">Целеполагание, базовый уровень</p>
                    <div class="card__progress">
                        <div class="progress">
                            <div class="progress__value">10%</div>
                            <div class="progress__line">
                                <div class="progress__done" style="width: 10%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="card__cover" src="img/cards/5.png" srcset="img/cards/5@2x.png 2x" alt="">
                <div class="card__more">
                    <a href="#">Подробнее</a>
                </div>
            </div>

            <div class="card" style="background: #F2F0E6">
                <div class="card__content">
                    <h2 class="card__title"><a href="#">Меньше стресса, больше дела</a></h2>
                    <p class="card__desc">Целеполагание, базовый уровень</p>
                    <div class="card__progress">
                        <div class="progress">
                            <div class="progress__value">10%</div>
                            <div class="progress__line">
                                <div class="progress__done progress__done_red" style="width: 10%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="card__cover" src="img/cards/6.png" srcset="img/cards/6@2x.png 2x" alt="">
                <div class="card__more card__more_red">
                    <a href="#">Подробнее</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
