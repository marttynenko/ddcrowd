{% set head_bg = '#EDEBF7' %}

{% extends "./course.twig" %}

{% block course_progress %}
    <div class="progress">
        <div class="progress__value">
            10%
            <span class="course-head__info-icon js-stats-dropdown"></span>
        </div>
        <div class="progress__line">
            <div class="progress__done" style="width: 10%"></div>
        </div>
    </div>
{% endblock %}

{% block course_actions %}
    <a class="button button_wide" href="#">Продолжить обучение</a>
    <a class="button button_wide button_transp" href="#">Подробнее о курсе</a>
{% endblock %}

{% block course_cover %}
    <img class="course-head__cover" src="img/courses/2.png" alt="" srcset="img/courses/2.png 1x, img/courses/2@2x.png 2x">
{% endblock %}
