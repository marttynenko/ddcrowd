{% extends "./course.twig" %}

{% block course_tabs %}
    <div class="tabs">
        <a class="tabs__item tabs__item_active">Содержание</a>
        <a href="#" class="tabs__item">О курсе</a>
    </div>
{% endblock %}

{% block course_content %}
